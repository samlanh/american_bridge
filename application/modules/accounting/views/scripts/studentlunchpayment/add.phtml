	qty = isNaN(qty)?1:qty;
	
	other_fee = dijit.byId('other_fee').get('value');
	other_fee = isNaN(other_fee)?0:other_fee;
	
	service_fee = service_fee * qty;
	
	discount = dijit.byId('discount').get('value');
