	discount_fix = dijit.byId('discount_fix').get('value');
	discount_fix = isNaN(discount_fix)?0:discount_fix;
	
	total_payment = ((service_fee-discount_fix)-((service_fee-discount_fix)*discount/100)) + parseFloat(other_fee);
	
	dijit.byId('total_payment').attr('value',total_payment.toFixed(2));
	dijit.byId('paid_amount').attr('value',total_payment.toFixed(2));
